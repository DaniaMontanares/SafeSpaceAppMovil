<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parent_layout_historias"
            >

            <TextView
                android:id="@+id/title_text_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_history"
                android:layout_width="124dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/party_gurl" />

            <TextView
                android:id="@+id/author_text_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title_text_history"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/content_text_history"
                android:layout_width="241dp"
                android:layout_height="53dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/author_text_history"

                android:text="TextView" />

            <ImageView
                android:id="@+id/imagen_comentarios_history"
                android:layout_width="20dp"
                android:layout_height="26dp"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/content_text_history"
                app:srcCompat="@drawable/comentarios" />

            <TextView
                android:id="@+id/comentarios_history"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/content_text_history"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:text="TextView" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>





</RelativeLayout>