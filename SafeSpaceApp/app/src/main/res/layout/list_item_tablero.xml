<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/parent_layout_historias"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_respuesta_hilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagen_responder_respuesta"
                android:layout_width="41dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/play_icon" />

            <TextView
                android:id="@+id/responder_respuesta_hilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/imagen_responder_respuesta"
                android:text="TextView" />

            <TextView
                android:id="@+id/numero_usuario_hilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title_respuesta_hilo"
                android:text="TextView"

                />

            <TextView
                android:id="@+id/comentario_respuesta_hilo"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:text="TextView" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>